extends layout

block content
    div.main-content
        .mainLoginForm
            form
                div.logginFormButtons
                    input(name="enter" type="button" value="Вход")
                    input(name="registration" type="button" value="Регистрация")
                div.loginFormLine
                    span
                       input(name='login', type='email', placeholder='Email')
                div.loginFormLine
                    span
                        input(name='username', type='text', placeholder='Имя пользователя')
                div.loginFormLine
                    span
                        input(name='password', type='password', placeholder='Пароль')
                div.loginFormLine
                    span
                        input#send(type='button', value='Зарегистрироваться')
