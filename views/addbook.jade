extends layout
block append head
    script(src='javascripts/addbook.js' defer)
    script(src="../bower_components/bootstrap-validator/dist/validator.min.js")
    link(rel='stylesheet', href='/stylesheets/addbook.css')
block content
    div.container
        div.row
            div.col-xs-3
            div.col-xs-6
                form#data(role="form")
                    fieldset
                        legend Добавь свою любимую книгу
                        div.form-group
                            input.form-control(
                            name='bookname'
                            type='text'
                            placeholder='Название'
                            pattern='[A-Za-zА-Яа-яЁё0-9.- ]{,30}'
                            required
                            )
                        div.form-group
                            input.form-control(
                            name='author'
                            type='text'
                            placeholder='Автор'
                            pattern='[A-Za-zА-Яа-яЁё0-9.- ]{,30}'
                            required
                            )
                        div.form-group
                            input.form-control(
                            name='genre'
                            type='text'
                            placeholder='Жанр'
                            pattern='[A-Za-zА-Яа-яЁё0-9.- ]{,30}'
                            required
                            )
                        div.form-group
                            input.form-control(
                            name='year'
                            type='numbers'
                            placeholder='Год выпуска'
                            pattern='[0-9]{4}'
                            )
                        div.form-group
                            textarea.form-control(rows=9 cols=40 name="text" placeholder='Описание книги' maxlength='150' required)
                        div.form-group
                            label.upload-label(for='upload-image')  Загрузить обложку
                            input#upload-image.form-control(name='bookimage' type='file' accept="image/jpeg,image/png")
                            p.help-block Картинки формата jpeg или png
                        button#send.btn.btn-default(type='submit') Отправить
            div.col-xs-3